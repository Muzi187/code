/* deacribe image */
.hetong .title{
  font-size:32rpx;
  color:#333;
  position: relative;
}
.hetong .title:before{
  content: '';
  position: absolute;
  width:8rpx;
  height:34rpx;
  background: #ffb400;
  top: 8rpx;
  left: -14rpx;

}
