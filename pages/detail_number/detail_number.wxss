/* 图片 */
.detail_img_layer{
  padding: 10rpx 0;
  position: relative;
  margin: 20rpx 0;
}
.detail_img_layer .detail_image{
 width:150rpx;
 height:150rpx;
 float: left;
 margin-right:20rpx;
}
.detail_img_layer.big{
  position: fixed;
  top: 0;
  width:100%;
  height:100%;
  overflow-x: hidden;
  overflow-y: auto;
  left: 0;
  right:0;
  margin:auto 0;
  background-color: rgb(0,0,0,0.4);
  z-index: 550;
}
.detail_img_layer.big .detail_image{
  width:100%;
}