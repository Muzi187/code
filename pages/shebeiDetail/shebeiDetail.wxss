/* 设备数据 */
.data_shebeiEagiy{
  margin: 20rpx 0;
  border: 1px solid #f3f3f3;
  padding: 10rpx 0;
  background-color: #fff;

}
.data_shebeiEagiy >view.moddle{
  display: inline-block;
  width: 33.3%;
  font-size: 22rpx;
  text-align: center;
  color: #1584ec;
  padding: 10rpx 0;
  box-sizing: border-box;
}
.data_shebeiEagiy >view.moddle >view.text{
  margin: 10rpx 0;
  color: #333;
  font-size: 28rpx;
}
.data_shebeiEagiy >view.moddle >view.text >text{
  font-size: 22rpx;
}
/* 设备状态 */
.list_detail{
  background-color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  padding: 10px 0;
}
.list_detail .url_botton{
  display: inline-block;
  width: 33%;
  text-align: center;
  font-size:28rpx;
  color: #666;
}
.list_detail .zhuangtai{
  color:#1584ec;
}
.list_detail .zhuangtai > text::after{
  content: "";
  display: inline-block;
  width: 50rpx;
  height:5rpx;
  background-color:#1584ec; 
  left: 0;
  right: 0;
  margin: auto;
  position: absolute;
  bottom: 0;
  margin-bottom: -10rpx;
  box-shadow: 0rpx 5rpx #d4e8f7;
}
.list_detail .zhuangtai > text{
  position: relative;
}
/* 数据视图 */
.word_date{
  background-color: #fff;
  padding: 10px 0;
}
.word_date > .date_type{
  display: inline-block;
  width: 22.5%;
  text-align: center;
  color: #666;
  font-size: 24rpx;
  padding: 10rpx;
  box-sizing: border-box;
  margin-left: 2%;
  border-radius: 20rpx;
  border: 1px solid #f8f8f8;
  height: 164rpx;
}
.word_date > .date_type:hover{
  border: 1px solid #1584ec;
  background-color: #eaf5fd;
}
.word_date > .date_type > image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 16rpx;
}
.word_date > .date_type >view{
  margin-top: 20rpx;
}
