}
/* 进度条 */
.canvasBox{
  height: 500rpx;
  position: relative;
  background: linear-gradient(to right, #1584ec,#8b8bfd);
}
.bigCircle{
  width: 420rpx;
  height: 420rpx;
  border-radius: 50%;
  position: absolute;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto auto;
  background-color: #0e79dd;
}
.littleCircle{
  width: 356rpx;
  height: 356rpx;
  border-radius: 50%;
  position: absolute;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto auto;
  background-color: #1584ec;
}
.canvas{
  width: 420rpx;
  height: 420rpx;
  position: absolute;
  background: transparent;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto auto;
  z-index: 99;
}